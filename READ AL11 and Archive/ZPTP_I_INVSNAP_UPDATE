*----------------------------------------------------------------------*
*                       T O P  I N C L U D E                           *
*----------------------------------------------------------------------*
INCLUDE zptp_i_invsnap_top.

*----------------------------------------------------------------------*
*            S E L E C T I O N  S C R E E N  I N C L U D E             *
*----------------------------------------------------------------------*
INCLUDE zptp_i_invsnap_01.

*----------------------------------------------------------------------*
*              I M P L E M E N T A T I O N  I N C L U D E              *
*----------------------------------------------------------------------*
INCLUDE zptp_i_invsnap_02.

*----------------------------------------------------------------------*
*                    I N I T I A L I Z A T I O N                       *
*----------------------------------------------------------------------*
INITIALIZATION.

  DATA(go_invsnap) = NEW lcl_invsnap( ).

*----------------------------------------------------------------------*
*               AT SELECTION SCREEN ON VALUE-REQUEST                   *
*----------------------------------------------------------------------*
AT SELECTION-SCREEN ON VALUE-REQUEST FOR p_inb.

  go_invsnap->open_file_dialog( CHANGING cv_path = p_inb ).

AT SELECTION-SCREEN ON VALUE-REQUEST FOR p_arch.

  go_invsnap->open_file_dialog( CHANGING cv_path = p_arch ).

*----------------------------------------------------------------------*
*              S T A R T  -  O F  - S E L E C T I O N                  *
*----------------------------------------------------------------------*
START-OF-SELECTION.

  go_invsnap->main( ).
